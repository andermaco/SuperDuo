<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>

    <style name="PagerTabStripText">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#262626</item>
    </style>

    <style name="ViewHolderImage">
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="WidgetItem">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textSize">@dimen/TeamNames</item>
        <item name="android:textColor">#262626</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
    </style>
    
    <style name="ScoreItem">
        android:layout_width="wrap_content"
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:textSize">@dimen/Score</item>
        <item name="android:textColor">#262626</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="DataItem">
        android:layout_width="wrap_content"
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:textSize">@dimen/Date</item>
        <item name="android:textColor">#262626</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="WidgetNoItem" parent="WidgetItem">
        <item name="android:textSize">@dimen/NoTeamNames</item>
        <item name="android:padding">15dp</item>
        <item name="android:background">#FFFFFF</item>
    </style>

    <!-- Widget Header-->
    <style name="WidgetHeader">
        <item name="android:padding">@dimen/abc_action_bar_default_padding_material</item>
        <item name="android:layout_height">@dimen/abc_action_bar_default_height_material</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@color/background_material_dark</item>
        <item name="android:orientation">horizontal</item>
    </style>
    <style name="WidgetAppIcon">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_gravity">left|start|center_vertical</item>
        <item name="android:contentDescription">@string/app_name</item>
        <item name="android:src">@drawable/ic_launcher</item>
    </style>
    <style name="WidgetTitle">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_gravity">left|start|center_vertical</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:text">@string/widget_title</item>
        <item name="android:textSize">@dimen/abc_text_size_medium_material</item>
        <item name="android:paddingLeft">@dimen/abc_action_bar_default_padding_material</item>
    </style>
    <style name="about">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">left</item>
        <item name="android:textSize">@dimen/TeamNames</item>
    </style>


</resources>
